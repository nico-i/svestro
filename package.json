{
  "name": "svestro",
  "description": "CLI tool to generate an Astro content configuration file from a Sveltia configuration file.",
  "main": "out/index.js",
  "bin": {
    "svestro": "./out/index.js"
  },
  "type": "module",
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "out",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "bun build ./index.ts --outdir ./out --target node --minify && bunx tsc",
    "dev": "bun run index.ts",
    "lint": "eslint . --ext .ts --fix && prettier . --write && tsc --noEmit",
    "prepare": "husky || true"
  },
  "author": "Nico Ismaili",
  "license": "MIT",
  "peerDependencies": {
    "@commitlint/lint": "19.8.1",
    "typescript": "^5"
  },
  "devDependencies": {
    "@commitlint/cli": "19.8.1",
    "@commitlint/config-conventional": "19.8.1",
    "@commitlint/core": "19.8.1",
    "@commitlint/types": "19.8.1",
    "@nico-i/eslint-config": "2.10.0",
    "@nico-i/prettier-config": "1.0.2",
    "@types/bun": "1.2.22",
    "@types/inquirer": "9.0.9",
    "@types/node": "22.18.3",
    "commitlint-plugin-spend": "1.3.0",
    "eslint": "9.35.0",
    "husky": "9.1.7",
    "prettier": "3.6.2"
  },
  "dependencies": {
    "chalk": "^5.6.0",
    "commander": "^14.0.0",
    "inquirer": "^12.9.4",
    "yaml": "^2.8.1"
  },
  "version": "1.2.0"
}
